{
  "name": "scriptflow-core-orchestrator",
  "version": "1.0.0",
  "description": "ScriptFlow - orchestrator runtime (MVP)",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p .",
    "test": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
